{
  "config": {
    "meta": {
      "name": "ovs",
      "display_name": "OVS",
      "description": "Setup and configure Open vSwitch"
    },
    "network": {
      "interface": "veth0",
      "enable_wan": false,
      "ip_index": 6,
      "host": true
    },
    "docker": {
      "depends_on": "base",
      "mounts": [
        {
          "source": "runtime/network",
          "target": "/runtime/network"
        }
      ]
    }
  }
}