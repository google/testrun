{% extends base_template %}
{% block content %}
{% if module_data %}
  <table class="module-data dns-module" style="width:100%;">
    <thead>
      <tr>
        {% for header in module_data_headers %}
          <th>{{ header }}</th>
        {% endfor %}
      </tr>
    </thead>
    <tbody>
      {% for row in module_data %}
        <tr>
          <td class='dns-ip'><div>{{ row['src'] }}</div></td>
          <td class='dns-ip'><div>{{ row['dst'] }}</div></td>
          <td class='dns-ip'><div>{{ row['res_ip'] }}</div></td>
          <td class='dns-type'><div>{{ row['typ'] }}</div></td>
          <td class='dns-url'><div>{{ row['dat'] }}</div></td>
          <td class='dns-count'><div>{{ row['count'] }}</div></td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% else %}
  <div class="callout-container info">
    <div class="icon"></div>
    No DNS traffic detected from the device
  </div>
{% endif %}
{% endblock %}